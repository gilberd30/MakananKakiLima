<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="10dp"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/textView1"
        android:layout_marginTop="150dp"
        android:layout_marginBottom="50dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Count : 0"
        android:layout_gravity="center"
        android:textSize="35dp"/>


    <Button
        android:id="@+id/buttonRandomForeground"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Random Foreground"
        android:layout_gravity="center"/>

    <Button
        android:id="@+id/buttonRandomBackground"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Random Background"
        android:layout_gravity="center"/>

    <LinearLayout
        android:layout_width="230dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:orientation="horizontal">

        <Button
            android:id="@+id/buttonInt"
            android:layout_margin="10dp"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="INT"/>

        <Button
            android:id="@+id/buttonFloat"
            android:layout_margin="10dp"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="FLOAT"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="35dp"
        android:layout_gravity="end|bottom"
        android:orientation="vertical">

        <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:id="@+id/fabArrowUp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:src="@drawable/ic_launcher_arrowup_foreground"
            />

        <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:id="@+id/fabArrowDown"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:src="@drawable/ic_launcher_arrowdown_foreground"
            />

    </LinearLayout>




</LinearLayout>