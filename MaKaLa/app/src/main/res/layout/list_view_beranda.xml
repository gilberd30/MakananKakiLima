<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:padding="10dp">

    <FrameLayout
        android:id="@+id/fl_product_image"
        android:layout_width="@dimen/profil_user_image_size"
        android:layout_height="@dimen/profil_user_image_size">

        <ImageView
            android:id="@+id/iv_product_photo"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="@dimen/profil_user_photo_margin"
            android:background="@color/LightGrey"
            android:contentDescription="@string/content_description"
            android:scaleType="fitXY"/>
        <View
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/user_image_background"/>
    </FrameLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="5dp">

        <com.aplikasi.makala.utils.MSPTextViewBold
            android:id="@+id/tv_produt_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:textColor="@color/colorThemeGreen"/>

        <com.aplikasi.makala.utils.MSPTextView
            android:textColor="@color/colorPrimaryText"
            android:id="@+id/tv_product_location"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

        <com.aplikasi.makala.utils.MSPTextView
            android:textColor="@color/colorPrimaryText"
            android:id="@+id/tv_product_price"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
    </LinearLayout>

</LinearLayout>